WARNINGS_CXXFLAGS = -W3
!endif

!ifdef DEBUG
DEBUG_CXXFLAGS = -Zi
DEBUG_LDFLAGS = -Zi
!else
DEBUG_CXXFLAGS = -O2
DEBUG_LDFLAGS = -O2
!endif

