subproject libs/asio/example/iostreams ;

project boost : $(BOOST_ROOT) ;

if $(UNIX)
{
  switch $(JAMUNAME)
  {
  case SunOS* :
    {
      SOCKET_LIBS = <find-library>socket <find-library>nsl ;
    }
  }
}

exe daytime_client
  : <lib>@boost/libs/date_time/build/boost_date_time
    daytime_client.cpp
  : <include>$(BOOST_ROOT)
    <include>../../../..
    <threading>multi
    <mingw><*><find-library>ws2_32
    <mingw><*><find-library>mswsock
    $(SOCKET_LIBS)
  ;

exe daytime_server
  : <lib>@boost/libs/date_time/build/boost_date_time
    daytime_server.cpp
  : <include>$(BOOST_ROOT)
    <include>../../../..
    <threading>multi
    <mingw><*><find-library>ws2_32
    <mingw><*><find-library>mswsock
    $(SOCKET_LIBS)
  ;
